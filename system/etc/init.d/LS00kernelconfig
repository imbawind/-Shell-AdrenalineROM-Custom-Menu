#!/system/bin/sh
#==============================================================
#       FILE		: LS00kernelconfig
#       AUTHOR		: ImbaWind @ XDA
#       DESCRIPTION	: Shell Script Advanced Features
#                     Execute on boot to set kernel param
#       GitHub		: https://github.com/ycsin
#==============================================================
SCRIPT_VERSION=1
. "/system/bin/SSAF_INCL"

MOUNT_RW

for i in 0 1 2 3; do
	lock_value 1690000 /sys/devices/system/cpu/cpu$i/cpufreq/scaling_max_freq
	lock_value 455000 /sys/devices/system/cpu/cpu$i/cpufreq/scaling_min_freq
	lock_value interactive /sys/devices/system/cpu/cpu\$i/cpufreq/scaling_governor
done

for i in 4 5 6 7; do
	lock_value 2496000 /sys/devices/system/cpu/cpu$i/cpufreq/scaling_max_freq
	lock_value 741000 /sys/devices/system/cpu/cpu$i/cpufreq/scaling_min_freq
	lock_value interactive /sys/devices/system/cpu/cpu\$i/cpufreq/scaling_governor
done

lock_value 572000 /sys/kernel/gpu/gpu_max_clock
lock_value 260000 /sys/kernel/gpu/gpu_min_clock
lock_value Interactive /sys/kernel/gpu/gpu_governor

MOUNT_RO