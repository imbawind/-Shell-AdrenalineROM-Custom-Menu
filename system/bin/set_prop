#!/system/bin/sh
#====================================================
#              FILE: set_prop.sh
#            AUTHOR: xpirt
#       DESCRIPTION: Change prop in file
#====================================================
SCRIPT_VERSION=1

ACTION=$1
if [ "$ACTION" = "version" ]; then
	echo $SCRIPT_VERSION;
fi

. "/system/bin/SSAF_INCL"

FILE=/system/build.prop
prop=$1
arg=$2

MOUNT_RW
if grep -Fq $prop $FILE ; then
    lineNum=`busybox sed -n "/${prop}/=" $FILE`
    sed -i "${lineNum} c${prop}=${arg}" $FILE
else
    echo $prop=$arg >> $FILE
fi;