#!/system/bin/sh
#====================================================
#              FILE: set_prop.sh
#            AUTHOR: xpirt
#       DESCRIPTION: Change prop in file
#====================================================
SCRIPT_VERSION=1

FILE=/system/build.prop
prop=$1
arg=$2

function MOUNT_RW()
{
	if [ ! -f "/system/xbin/sysrw"]; then
		mount -o rw,remount /system
	else
		/system/xbin/sysrw
	fi
}

function MOUNT_RO()
{
	if [ -f "/system/xbin/sysro" ]; then
		/system/xbin/sysro
	fi
}

MOUNT_RW
if grep -Fq $prop $FILE ; then
    lineNum=`busybox sed -n "/${prop}/=" $FILE`
    sed -i "${lineNum} c${prop}=${arg}" $FILE
else
    echo $prop=$arg >> $FILE
fi;
MOUNT_RO