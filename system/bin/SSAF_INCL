#!/system/bin/sh
#==============================================================
#       FILE		: SSAF_INCL
#       AUTHOR		: ImbaWind @ XDA
#       DESCRIPTION	: Shell Script Advanced Features
#                     INCLUDE FILE
#					  Contains various fns that are used
#					  across multiple files
#       GitHub		: https://github.com/ycsin
#==============================================================
SCRIPT_VERSION=1

NONE='\033[00m'
RED='\033[01;31m'
GREEN='\033[01;32m'
YELLOW='\033[01;33m'
PURPLE='\033[01;35m'
CYAN='\033[01;36m'
WHITE='\033[01;37m'
BOLD='\033[1m'
UNDERLINE='\033[4m'

CMD=/system/bin/cmd

ACTION=$1
if [ "$ACTION" = "VERSION" ]; then
	echo "$SCRIPT_VERSION";
	exit
fi

function HAS_INTERNET()
{
	if ping -q -c 1 -W 1 8.8.8.8 &>/dev/null; then
	  true
	else
	  false
	fi
	return
}

function MOUNT_RW()
{
	if [ ! -f "/system/xbin/sysrw" ]; then
		mount -o rw,remount /system
	else
		#system/xbin/sysrw
		mount -o rw,remount /system
	fi
}

function MOUNT_RO()
{
	if [ ! -f "/system/xbin/sysro" ]; then
		mount -o ro,remount /system
	else
		#/system/xbin/sysro
		mount -o ro,remount /system
	fi
}

function press_enter()
{
	echo -n "Press EnterKey to continue.";
	read enterKey
}

function check_root()
{
	if [[ $(id -u) -ne 0 ]] ; then
		echo "This script requires root access to execute";
		echo "Type  su  first before  cfg";
		echo "";
		sleep 2
		press_enter
		exit 0
	fi
}