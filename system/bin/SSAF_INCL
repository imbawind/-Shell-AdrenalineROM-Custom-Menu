NONE='\033[00m'
RED='\033[01;31m'
GREEN='\033[01;32m'
YELLOW='\033[01;33m'
PURPLE='\033[01;35m'
CYAN='\033[01;36m'
WHITE='\033[01;37m'
BOLD='\033[1m'
UNDERLINE='\033[4m'

CMD=/system/bin/cmd

LITTLE_MAX=14
LITTLE_MIN=15
LITTLE_GOV=16
big_MAX=18
big_MIN=19
big_GOV=20
GPU_MAX=22
GPU_MIN=23
GPU_GOV=24


function HAS_INTERNET()
{
	if ping -q -c 1 -W 1 8.8.8.8 &>/dev/null; then
	  true
	else
	  false
	fi
	return
}

function MOUNT_RW()
{
	mount -o rw,remount /system
	mount -o rw,remount /system/etc
	mount -o rw,remount /system/etc/init.d
}

function MOUNT_RO()
{
	sync
	mount -o ro,remount /system/etc
	sync
	mount -o ro,remount /system
	sync 1
	mount -o rw,remount /system/etc/init.d
}

function press_enter()
{
	echo -n "Press EnterKey to continue."
	read enterKey
}

function check_root()
{
	if [ $(id -u) -ne 0 ]; then
		echo "This script requires root access to execute"
		echo "Type  su  first before  cfg"
		echo ""
		sleep 2
		press_enter
		exit 0
	fi
}

# $1:value $2:file path
function lock_value() 
{
	if [ -f ${2} ]; then
		chmod 0666 ${2}
		echo ${1} > ${2}
		chmod 0444 ${2}
	fi
}